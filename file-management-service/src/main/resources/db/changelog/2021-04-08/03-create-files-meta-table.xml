<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="Volodymyr Kozlov" id="1642009957-3">
        <createTable tableName="files_meta">
            <column name="guid" type="varchar(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="file_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="directory" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="storage_name" type="varchar(32)">
                <constraints nullable="false"/>
            </column>

            <column name="storage_repository" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="content_type" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="content_length" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="path" type="varchar(2048)">
                <constraints nullable="false"/>
            </column>

            <column name="version" type="varchar(1024)"/>

            <column name="created_by" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="updated_by" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="timestamp">
                <constraints nullable="false"/>
            </column>

            <column name="record_status" type="varchar(1)" defaultValue="A">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="files_meta" indexName="kowObRVJBV">
            <column name="file_name"/>
            <column name="directory"/>
            <column name="storage_repository"/>
            <column name="storage_name"/>
            <column name="version"/>
        </createIndex>

        <createIndex tableName="files_meta" indexName="kowObRVJBS">
            <column name="path"/>
            <column name="version"/>
        </createIndex>

        <addForeignKeyConstraint baseTableName="files_meta"
                                 baseColumnNames="storage_name, storage_repository"
                                 constraintName="kowObRVJBZ"
                                 referencedTableName="storage_configs"
                                 referencedColumnNames="name, repository"/>
    </changeSet>

</databaseChangeLog>
